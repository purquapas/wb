#!/usr/local/bin/cbsd
#v10.1.0
globalconf="${workdir}/cbsd.conf";
MYARG=""
MYOPTARG="jname"
MYDESC="Destroy VM"
CBSDMODULE="jail"
EXTHELP="wf_bremove.html"

set -e
. ${globalconf}
set +e

. ${subr}
. ${strings}
. ${tools}

if [ -z "${1}" ]; then
	select_jail_by_list -s "List of local jails:" -r 0 -e bls
	exec cbsd sudo /usr/local/cbsd/sudoexec/jremove jname=${jname}
else
	exec cbsd sudo /usr/local/cbsd/sudoexec/jremove $*
fi
