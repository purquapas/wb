#!/usr/local/bin/cbsd
#v10.1.2
MYARG="node jname"
MYOPTARG=""
MYDESC="Clone jail to remote machine"
CBSDMODULE="jail"

. ${subr}

init $*

printf "${MAGENTA}jrcloning${NORMAL}"
dot ""
j2prepare node=${node} jname=${jname} > $DEBLOG 2>&1
dot "j2prepare"
j2slave node=${node} jname=${jname} > $DEBLOG 2>&1
dot "j2slave"
rexe node=${node} /usr/local/bin/cbsd jregister jname=${jname}
dot "jregister"
err 0 "${GREEN}ok${NORMAL}"
