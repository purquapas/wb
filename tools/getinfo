#!/bin/sh
#v9.0.0
globalconf="${workdir}/cbsd.conf";
GENUMARG=1
# getinfo param param ...
MYARG=""
MYOPTARG=""
MYNUMARG=$*
MYDESC="Get information from node registry"

set -e
. ${globalconf}
set +e

. ${subr}
init $*

if [ -f ${inventory} ]; then
. ${inventory}
else
err 1 "No ${inventory}"
fi

if [ -f "${workdir}/ver" ]; then
. "${workdir}/ver"
fi

QUIET=0
if [ "${1}" = "-q" ]; then
    QUIET=1
    shift
fi

ARGS=${@}

for OID in ${ARGS}; do
case "${OID}" in
"location")
echo "${OID}: ${nodeloc}"
;;
"jail_interface")
echo "${OID}: ${jail_interface}"
;;
"nodemode")
echo "${OID}: ${nodemode}"
;;
"nodename")
if [ $QUIET -eq 1 ]; then
    echo ${nodename}
else
    echo "${OID}: ${nodename}"
fi
;;
"nodeippool")
echo "${OID}: ${nodeippool}"
;;
"repo")
if [ $QUIET -eq 1 ]; then 
    echo "${repo}"
else
    echo "${OID}: ${repo}"
fi
;;
"jnameserver")
echo "${OID}: ${jnameserver}"
;;
"ipfw_enable")
echo "${OID}: ${ipfw_enable}"
;;
"ncip")
echo "${OID}: ${ncip}"
;;
"cbsduser")
echo "${OID}: ${cbsduser}"
;;
"ncversion")
echo "${OID}: ${ncversion}"
;;
"fs")
echo "${OID}: ${fs}"
;;
"ncpu")
echo "${OID}: ${ncpu}"
;;
"physmem")
echo "${OID}: ${physmem}"
;;
"disks")
echo "${OID}: ${disks}"
;;
"netif")
echo "${OID}: ${netif}"
;;
*)
echo "error: No such ${OID}"
;;
esac

done
